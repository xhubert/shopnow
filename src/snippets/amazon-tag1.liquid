<!-- /snippets/amazon-tag.liquid -->

{%- comment -%}
  Accepts:
  - variants: [Object] product.variants;

  Usage:
  In your liquid template file, copy the following line
  - {% include 'amazon-tag' with variants: product.variants %}
{%- endcomment -%}

<div class="amazon-tag--snippet">
{% assign hasAmazonTag = false %}
{% for variant in variants %}
  {% if variant.option1 == 'amazon' %}
    {% assign hasAmazonTag = true %}
  {% endif %}
{% endfor %}
  {% if hasAmazonTag %}
    <span>
      Available on
    </span>
    {% include 'icon-amazon' %}
  <% endif %>
</div>
<style>
.amazon-tag--snippet {
  display: inline-block;
}
.buy-on-amazon-btn {
  position: relative;
  display: inline-block;
  width: 200px;
  height: 40px;
  margin-top: 16px;
  margin-right: 16px;
  background: #353535;
  border-color: #222222;
}
.buy-on-amazon-btn:hover {
  box-shadow: 0 5px 10px 0 rgba(27, 35, 31, 0.2);
    color: #FFFFFF;
}
.buy-on-amazon-btn > span {
  position: absolute;
  top: 5px;
  left: 28px;
  font-weight: 600 !important;
  font-size: 12px;
  color: #FF9900 !important;
}
.icon-amazon {
  margin-left: 28px;
}
.icon-amazon .text {
  fill: #FFFFFF;
}
</style>
